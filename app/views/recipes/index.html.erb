<h1>Listing recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>No of persons</th>
      <th>Has prerequisites</th>
      <th>Recipe type</th>
      <th>Diet type</th>
      <th>Time required</th>
      <th>User</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.no_of_persons %></td>
        <td><%= recipe.has_prerequisites %></td>
        <td><%= recipe.recipe_type %></td>
        <td><%= recipe.diet_type %></td>
        <td><%= recipe.time_required %></td>
        <td><%= recipe.user_id %></td>
        <td><%= recipe.published %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
