<div class="container-fluid loginBackground">
<div class="col-lg-offset-3 col-lg-6 parentContainer">
    
    <div class='col-lg-7 col-md-7 rightBordered'>
      <div class="col-lg-12 col-md-12 text-center ">
      <h2>Cooking Planner</h2>
      <hr>
      <div class="first text-center">
      Login into your account
      </div>
      </div>              
        
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>  
      <div class="col-lg-12 col-md-12">
        <div class="input-group margin-top-sm">
          <span class="input-group-addon"><i class="fa fa-cog fa-lg fa-fw"></i></span>  
          <%= f.text_field :user_name, autofocus: true,:placeholder=>"User Name",:class=>"form-control" %>
        </div>

        <div class="input-group margin-top-sm">
          <span class="input-group-addon"><i class="fa fa-lock fa-lg fa-fw"></i></span>  
             <%= f.password_field :password, autocomplete: "off",:placeholder=>"Password",:class=>"form-control" %>
        </div>
       </div> 
       
      <div class="col-lg-12 col-md-12 margin-top-sm"> 
          <%= f.submit "Log in",:class=>"btn btn-primary btn-block" %>  
        </div>
      <% end %>

      <div class="col-lg-12 col-md-12 margin-top-sm text-center margin-btm-sm">
      <div><%= link_to "New User?",'/users/sign_up' %> </div>
      
      </div>

    </div>
    <div class="col-lg-5 col-md-5">
    <div class="margin-top-big margin-left-md"><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook),:class=>'btn btn-primary btn-lg' %></div>
    </div>
</div>
</div>